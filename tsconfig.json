{
    "compilerOptions": {
      "allowJs": true,
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/index.tsx"
    ],
    "awesomeTypescriptLoaderOptions": {
      "useWebpackText": true,
      "useTranspileModule": true,
      "doTypeCheck": true,
      "forkChecker": true
      }
    
  }
  